html{height:100%;}


	body{
		height:100%;
		background:white;
		font-family:  'Roboto', Arial, sans-serif;
		width:100%;
		margin:0;
		padding:0;
		
	}
	a {
		margin-left: 10px;
	}
	h1{
		margin:0 auto;
		padding-top:.6em;
		text-align:center;
		font-weight:100;
		font-size: 36px;
		color:white;
		
	}
	h2{
		font-family: 'Roboto';
		font-weight:400;
		font-size:28px;
		color:#B23C35;
	}
	h3{
		font-family: 'Roboto';
		font-weight:400;
		font-size:22px;
		color:#B23C35;
		font-weight:400
	}
	p{
		font-weight:400;
		font-size:14px;
		color:#6A6B60;
		
	}
	.heading1{
		background-color:#8d26dc;
		-webkit-box-shadow: 1px 1px 16px rgba(50, 50, 50, 0.55);
		-moz-box-shadow:    1px 1px 16px rgba(50, 50, 50, 0.55);
		box-shadow:         1px 1px 16px rgba(50, 50, 50, 0.55);
		width:250px;
		padding:10px;
		
	}
.contentArea{
		min-height: 100%;
		height: auto !important;
		height: 100%;
		left:0;
		top:0;
		position:absolute;
		width:100%;
		margin:0 auto -17em;
		background:white;
	}
	
	.whiteText{
		color:#FFF;
	}

#header{
	position:absolute;
	width:100%;
	height:7em;
	background:#B23C35;

	}
li{
	margin:0 auto;
	position:relative;
	top:9.5em;
	display:inline-block;
}
footer, .push{
		margin:0 auto;
		padding:0 auto;
		text-align:center;
		position:absolute;
		background:#bfbfbf ;
		width:100%;
		bottom:0;
		height:17em;
}
footer a{
	color:#B23C35;
	text-decoration:none;
}
footer a:hover{
	color:#5E201C;
	text-decoration:none;
}
footer a:visited{
	color:#B23C35;
	text-decoration:none;
}


#logo{
	text-align:center;
	float:left;
	width:15em;
	height:100%;
	background:white;
}
#nav{
	text-align:center;
	float:right;
	right:0 em;
	width:15em;
	height:100%;
	background:white;
}
